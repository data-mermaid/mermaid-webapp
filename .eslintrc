{
  "extends": [
    "@sparkgeo/eslint-config-react",
    "plugin:testing-library/recommended",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "plugins": ["react-hooks"],
  "rules": {
    "camelcase": "off",
    "curly": ["error", "all"],
    "no-underscore-dangle": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-boolean-value": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_", // ignore unused vars and args that start with _. These vars are unsued, but named for readability/maintainability of code.
        "ignoreRestSiblings": true // allow destructuring assignment to unpack extract values from arrays or properties fom objects into distinct variables and create partial objects/remove properties from an object (.e.g. {removeProp, ...keepProps})
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.stories.js", "src/testUtilities/**/*"],
      "rules": { "import/no-extraneous-dependencies": "off" }
    }
  ]
}
